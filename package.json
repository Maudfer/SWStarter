{
  "name": "swexercise-root",
  "private": true,
  "scripts": {
    "install": "npm run install:frontend && npm run install:backend",
    "install:frontend": "npm ci --prefix frontend",
    "install:backend": "npm ci --prefix backend",
    "clean": "rm -rf frontend/node_modules backend/node_modules frontend/.next backend/dist",
    "build": "docker-compose build",
    "dev": "docker-compose --profile with-redis up --build",
    "test": "docker-compose build backend frontend"
  }
}
